    "deploy:incomeTracker:baseSepolia": "hardhat run scripts/deployIncomeTracker.ts --network baseSepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "coverage": "hardhat coverage",
    "verify": "hardhat verify",
    "size": "hardhat size-contracts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^20.10.5",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
